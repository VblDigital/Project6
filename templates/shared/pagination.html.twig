{% block pagination %}
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="{{ paginationLinks.firstPage }}"><i class="fas fa-angle-double-left"></i></a>
        </li>
        {% if paginationLinks.previousPage < 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ paginationLinks.firstPage }}"><i class="fas fa-angle-left"></i></a>
            </li>
        {% else %}
            <li class="page-item">
                <a class="page-link" href="{{ paginationLinks.previousPage }}"><i class="fas fa-angle-left"></i></a>
            </li>
        {% endif %}
        {% for x in 1..paginationLinks.pages %}
            <li class="page-item active">
                <a class="page-link" href="{{ path('home', {'page': x }) }}">{{ x }}</a>
            </li>
        {% endfor %}
        {% if paginationLinks.nextPage > paginationLinks.lastPage %}
            <li class="page-item">
                <a class="page-link" href="{{ paginationLinks.lastPage }}"><i class="fas fa-angle-right"></i></a>
            </li>
        {% else %}
            <li class="page-item">
                <a class="page-link" href="{{ paginationLinks.nextPage }}"><i class="fas fa-angle-right"></i></a>
            </li>
        {% endif %}
        <li class="page-item">
            <a class="page-link" href="{{ paginationLinks.lastPage }}"><i class="fas fa-angle-double-right"></i></a>
        </li>
    </ul>
{% endblock %}