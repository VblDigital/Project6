{% extends 'base.html.twig' %}

{% block title %}SnowTricks{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1>{{ title }}</h1>
    </div>
    <section class="list-group">
        {% for trick in tricks %}
            <div class="list-group">
                <a href="/trick/{{ trick.id }}" class="list-group-item active">
                    <h2>{{ trick.name }}</h2>
                </a>
                <div class="list-group-item">{{ trick.chapo | raw }}<br/>
                <a href="/trick/{{ trick.id }}">Lire la suite ...</a>
                </div>
                <img src="{{ trick.imageLink }}" alt="{{ trick.name }}"/>
                <p class="list-group-item">Créé par  || Catégorie :
                </p>
            </div>
        {% endfor %}
    </section>
{% endblock %}