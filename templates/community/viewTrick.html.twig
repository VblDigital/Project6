{% extends 'base.html.twig' %}

{% block title %}SnowTricks{% endblock %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-body">
            <h2>{{ trick.name }}</h2>
            <div>{{ trick.description | raw }}
            </div>
            <div style="padding-bottom: 10px">
                {% if trick.imageLink is not empty %}
                    <img src="{{ trick.imageLink }}" alt="{{ trick.name }}"/>
                {% endif %}
            </div>
            <p>Créé par {{ trick.user.username }} || Catégorie : {{ trick.category.name }}
            </p>
            <div class="list-group">
                <h4>Les commentaires</h4>
                {% if trick.comments is empty %}
                    <p>Publier le premier commentaire !</p>
                {% else %}
                    {% for comment in trick.comments %}
                        <div class="list-group-item">{{ comment.text | raw }}<br/>
                        </div>
                        <p class="list-group-item">Posté par {{ comment.user.username }} le {{ comment.date | date ('d/m/y à H:i') }}<br/>
                            -------------------------------------------
                        </p>
                    {% endfor %}
                {% endif %}
            </div>
            <div>
                {% if app.user %}
                    <h6>Nouveau commentaire</h6>

                    {{ form_start(formComment) }}

                    {{ form_row(formComment.user, {'label': 'Auteur' }) }}
                    {{ form_row(formComment.text, {'label': 'Commentaire' }) }}

                    <button type="submit" class="btn btn-primary">Enregistrer</button>

                    {{ form_end(formComment) }}
                {% else %}
                    <h4>Il faut vous <a href="{{ path('security_login') }}">connecter</a> pour commenter</h4>
                {% endif %}
            </div>
            <p style="padding-top: 10px">
                <a href="/trick/{{ trick.id }}id}/edit">
                    <i class="far fa-edit fa-2x"></i>Modifier le Trick</a>
            </p>
            <p><a href="/">Retour</a></p>
        </div>
    </div>
{% endblock %}