{% extends 'base.html.twig' %}

{% block title %}Création d'une catégorie{% endblock %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-body-newTrick">
            <h2>Création d'une catégorie</h2>

            {{ form_start(formCategory) }}

            {{ form_label(formCategory.name, "Nom de la catégorie :", {'label_attr': {'class': 'form-title'}}) }}
            {{ form_widget(formCategory.name) }}

            <div class="pt10 pb10">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>

            {{ form_end(formCategory) }}
        </div>
    </div>
{% endblock %}