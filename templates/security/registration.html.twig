{% extends 'base.html.twig' %}

{% block title %}Création d'un compte{% endblock %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-body">
            <h2>Création d'un compte</h2>

            {{ form_start(formRegistration) }}

            {{ form_row(formRegistration.username, {'label': 'Pseudonyme' }) }}
            {{ form_row(formRegistration.password, {'label': 'Mot de passe' }) }}
            {{ form_row(formRegistration.confirm_password, {'label': 'Confirmer le mot de passe' }) }}
            {{ form_row(formRegistration.email, {'label': 'Adresse email' }) }}

            <button type="submit" class="btn btn-primary">Enregistrer</button>

            {{ form_end(formRegistration) }}
        </div>
    </div>
{% endblock %}
