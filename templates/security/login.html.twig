{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <form action="{{ path('security_login') }}" method="post">
        {% if app.session.flashBag.has('notice') %}
            <p class="panel-body-red">
                {% for msg in app.session.flashBag.get('notice') %}
                    {{ msg }}
                {% endfor %}
            </p>
        {% endif %}
        <div class="form-group">
            <label for="login">Identifiant</label>
            <input type="text" class="form-control" id="login" name="_username">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" class="form-control" id="password" name="_password">
        </div>
        <input type="hidden" name="_target_path" value="{{ app.request.headers.get('referer') }}"/>
        <div><button type="submit" class="btn btn-primary">Se connecter</button></div><br/>
        <div><a href="{{ path('password_recovery')}}">Mot de passe oubli√© ?</a></div>
    </form>
{% endblock %}
