{% extends 'base.html.twig' %}

{% block title %}Enregistrer un nouveau mot de passe{% endblock %}

{% block body %}
    <div>
        <div class="red">
            {% if app.session.flashBag.has('danger') %}
                {% for msg in app.session.flashBag.get('danger') %}
                    {{ msg }}
                {% endfor %}
            {% endif %}
        </div>
        <div class="panel-body">
            {{ form_start(formNewPass) }}

            {{ form_row(formNewPass.password, {'label': 'Mot de passe' }) }}
            {{ form_row(formNewPass.confirm_password, {'label': 'Confirmer le mot de passe' }) }}

            <button type="submit" class="btn btn-primary">Enregistrer</button>

            {{ form_end(formNewPass) }}
        </div>
    </div>
{% endblock %}